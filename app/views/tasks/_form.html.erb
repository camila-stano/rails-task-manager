<div class="card text-white bg-success mb-3" style="max-width: 25rem;">
  <div class="card-header">New Task:</div>
  <div class="card-body">
    <%= form_for (task) do |f| %>
      <div class="container">
        <div class="row mt-3 ">
          <div class="col-2 ">
            <%= f.label :title %>
          </div>
          <div class="col-10">
            <%= f.text_field :title %>
          </div>
        </div>
        <div class="row mt-3">
          <div class="col-2 ">
            <%= f.label :details %>
          </div>
          <div class="col-10">
            <%= f.text_field :details %>
          </div>
        </div>
        <div class="row mt-3">
          <%= f.submit class: "btn btn-dark btn-sm mt-3" %>
        </div>
      </div>
    <% end %>
      <p class="btn btn-danger btn-sm mt-3"><%= link_to "Back to list", tasks_path %></p>
  </div>
</div>


